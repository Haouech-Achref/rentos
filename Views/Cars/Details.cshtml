@model Rentos.Models.Car

@{
    ViewData["Title"] = "Details";

    var carPicture = "/images/cars/" + Model.Picture;
}


<h2 class="text-center text-muted">Caar details</h2>
<hr />
<div class="container">

    <div class="row">
        <img src="@carPicture" class="img-responsive pull-left" style="height: 444px; width: 592px;" />
        <div class="col-md-5">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <td><b>@Html.DisplayNameFor(model => model.Manufacturer)</b></td>
                        <td>@Html.DisplayFor(model => model.Manufacturer)</td>
                    </tr>
                    <tr>
                        <td> <b>@Html.DisplayNameFor(model => model.Model)</b></td>
                        <td> @Html.DisplayFor(model => model.Model)</td>
                    </tr>
                    <tr>
                        <td><b> @Html.DisplayNameFor(model => model.RegistrationNumber)</b></td>
                        <td> @Html.DisplayFor(model => model.RegistrationNumber)</td>
                    </tr>
                    <tr>
                        <td><b> @Html.DisplayNameFor(model => model.Color)</b></td>
                        <td> @Html.DisplayFor(model => model.Color)</td>
                    </tr>
                    <tr>
                        <td><b> @Html.DisplayNameFor(model => model.Mileage)</b></td>
                        <td> @Html.DisplayFor(model => model.Mileage)</td>
                    </tr>
                    <tr>
                        <td><b> @Html.DisplayNameFor(model => model.Power)</b></td>
                        <td> @Html.DisplayFor(model => model.Power)</td>
                    </tr>
                    <tr>
                        <td> <b>@Html.DisplayNameFor(model => model.Price)</b></td>
                        <td> @Html.DisplayFor(model => model.Price)</td>
                    </tr>
                </tbody>
            </table>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.CarId" class="btn btn-info">Edit</a> 
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </div>
</div>

